# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Cognito
NEXT_PUBLIC_COGNITO_REGION=us-east-1
NEXT_PUBLIC_COGNITO_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-client-id
NEXT_PUBLIC_COGNITO_DOMAIN=your-cognito-domain

# API Gateway
NEXT_PUBLIC_API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod

# IoT Core
IOT_ENDPOINT=your-iot-endpoint.iot.us-east-1.amazonaws.com
IOT_TOPIC_PREFIX=urban-blue-zone

# DynamoDB Tables
DYNAMODB_REGION=us-east-1
RESIDENTS_TABLE=ubz-demo-residents
VITALS_TABLE=ubz-demo-vitals
CHECKINS_TABLE=ubz-demo-checkins
ALERTS_TABLE=ubz-demo-alerts
AGGREGATIONS_TABLE=ubz-demo-aggregations

# SNS/SES
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:your-account-id:ubz-alerts
SES_FROM_EMAIL=noreply@yourdomain.com

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Environment
NODE_ENV=development
ENVIRONMENT=demo